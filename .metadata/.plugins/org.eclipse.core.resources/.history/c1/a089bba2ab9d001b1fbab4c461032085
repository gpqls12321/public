	$(document).ready(function() {
		
		$("#text").click(function() {
			alert($("#target").text());
		});
		
		$("#html").click(function() {
			alert($("#target").html());
		});
		
		$("#val").click(function() {
			alert($("#irum").val());
			console.log($("#irum").val());
		});
		
		$("#attr").click(function() {
			alert($("#kim").attr("src"));
		});
		
		$("#button1").click(function() {
			$("#append").append("<b style='color:red'>Yes Sir! </b>");
		});
		
		$("#button2").click(function() {
			$("#append").prepend("<b style='color: #d3d8ff'>Yes Sir! </b>");
		});
		
		
	});
</script>
